\mode<presentation>

\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{footline}{}


\setbeamersize{text margin left=1em,text margin right=1em}

\defbeamertemplate*{frametitle}{xorg}[1][left]
{
  \vbox{}\vskip-\beamer@leftmargin
  \begin{beamercolorbox}[sep=0.2\beamer@leftmargin,#1,wd=\textwidth]{frametitle}
    {\strut\usebeamerfont{frametitle}\usebeamercolor[fg]{frametitle}\insertframetitle\strut\par}
    \vskip-0.6\baselineskip
    {\color{xorg-palette-dark} \rule{\textwidth}{0.1ex}}\par
    \vskip-0.1\baselineskip
    {
      \ifx\insertframesubtitle\@empty
      \else
      {\strut\usebeamerfont{framesubtitle}\usebeamercolor[fg]{framesubtitle}\insertframesubtitle\strut\par}%
      \fi
    }
    \end{beamercolorbox}
}

% Frame title continuations, default
\defbeamertemplate*{frametitle continuation}{xorg}{(\insertcontinuationcount)}


