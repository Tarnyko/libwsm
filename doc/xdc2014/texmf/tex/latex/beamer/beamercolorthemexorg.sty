% Title page colours (black and white to go with the main colour)
\definecolor{xorg-title-main}{RGB}{0, 0, 0}
\definecolor{xorg-title-subtitle}{RGB}{255, 255, 255}
\definecolor{xorg-title-bg}{named}{xorg-palette-mid}
\definecolor{xorg-title-banner-bg}{RGB}{255, 255, 255}
\definecolor{xorg-title-banner-fg}{RGB}{0, 0, 0}

% Normal slides are displayed black on white
\definecolor{xorg-slide-bg}{RGB}{255, 255, 255}
\definecolor{xorg-slide-fg}{RGB}{0, 0, 0}
\definecolor{xorg-slide-shaded}{RGB}{121, 104, 98} % xorg warmgrey
\definecolor{xorg-slide-banner-bg1}{RGB}{0, 0, 0}
\definecolor{xorg-slide-banner-bg2}{named}{xorg-palette-mid}
\definecolor{xorg-slide-banner-fg}{named}{xorg-slide-bg}


% This sets the colour of the frame titles to something standard 
\setbeamercolor{frametitle}{fg = xorg-palette-dark, bg = xorg-slide-bg}
\setbeamercolor{framesubtitle}{fg = xorg-palette-dark, bg = xorg-slide-bg}

% Headlines used in vertical theme
\setbeamercolor{upper separation line head}{bg = xorg-slide-banner-bg1}
\setbeamercolor{middle separation line head}{bg = xorg-palette-light}
\setbeamercolor{lower separation line head}{bg = xorg-title-banner-bg}

% In case you choose to display the Table of Contents, or the Outline slide.
\setbeamercolor{section in toc}{fg = xorg-slide-fg}
\setbeamercolor{section in toc shaded}{fg = xorg-slide-shaded} 

% The colour of all the items, subitems and and subsubitems are set to black.
\setbeamercolor{item}{fg = xorg-palette-light}
\setbeamercolor{subitem}{fg = xorg-palette-light}
\setbeamercolor{subsubitem}{fg = xorg-palette-light}

% This sets the color for each item heading of the description environment.
\setbeamercolor{description item}{fg = xorg-palette-dark}

% NOTE: Setting the color black for all the items also sets in black for other environemnts like enumerate.

% We also need to fix the colours for captions for figures and tables.
\setbeamercolor{caption}{fg = xorg-slide-fg}
\setbeamercolor{caption name}{fg = xorg-slide-fg}

% In addition, we can also change the background colour of the slides depending on pur requirement.
\setbeamercolor{background canvas}{bg = xorg-slide-bg,fg = xorg-slide-fg}

% Normal blocks
\setbeamercolor{block title}{fg = xorg-palette-dark, bg = xorg-slide-bg}
\setbeamercolor{block body}{bg = xorg-slide-bg}

% Alert block
\setbeamercolor{block title alerted}{bg = xorg-palette-dark, fg = xorg-title-main}
\setbeamercolor{block body alerted}{bg = xorg-palette-light, fg = xorg-slide-fg}

% Example block
\setbeamercolor{block title example}{fg = xorg-palette-dark, bg = xorg-slide-bg}
\setbeamercolor{block body example}{fg = xorg-slide-fg, bg = xorg-slide-bg}

% Table of contents
\setbeamercolor{section in toc shaded}{fg = xorg-slide-fg}
\setbeamercolor{section in toc}{fg = xorg-palette-dark}
\setbeamercolor{subsection in toc shaded}{fg = xorg-slide-fg}
\setbeamercolor{subsection in toc}{fg = xorg-palette-dark}

